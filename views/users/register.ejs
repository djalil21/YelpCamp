<% layout('layouts/boilerplate') %>

<div class="d-flex container justify-content-center align-items-center my-5">
  <div class="row">
    <div class="card shadow col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <img
        src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80"
        alt=""
        class="card-img-top img-thumbnail"
      />
      <div class="card-body">
        <h5 class="card-title">Register</h5>
        <form
          action="/register"
          method="post"
          class="needs-validation"
          novalidate
        >
          <div class="mb-3">
            <label class="form-label" for="username">username</label>
            <input
              class="form-control"
              type="text"
              id="username"
              name="username"
              autofocus
              required
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please choose a valide username.</div>
            <div class="mb-3">
              <label class="form-label" for="email">email</label>
              <input
                class="form-control"
                type="email"
                id="email"
                name="email"
                required
              />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please choose a valide email.</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="password">password</label>
              <input
                class="form-control"
                type="password"
                id="password"
                name="password"
                required
              />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">
                Please choose a valide password.
              </div>
            </div>
          </div>
          <div class="d-grid">
            <button class="btn btn-success" type="submit">Sign up</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
